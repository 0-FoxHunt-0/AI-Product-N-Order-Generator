generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  SKU           String  @id @default(uuid())
  name          String
  count         Int
  price         Float
  providerPrice Float
  brand         String
  imageUrl      String?
  notes         String?
  deleted       Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags   Tag[]
  orders OrderProduct[]

  @@unique([name, brand])
}

model Tag {
  SKU        String  @id @default(uuid())
  color      String
  message    String
  Product    Product @relation(fields: [productSKU], references: [SKU], onDelete: Cascade)
  productSKU String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  SKU       String   @id @default(uuid())
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products OrderProduct[]
}

model OrderProduct {
  orderId   String
  productId String
  order     Order   @relation(fields: [orderId], references: [SKU], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [SKU], onDelete: Cascade)

  @@id([orderId, productId])
}
